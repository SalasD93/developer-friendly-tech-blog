<article class="post">
  <div class="title border bg-gray-500 text-white text-center p-2 mt-2 w-full">
    <a href="/post/{{id}}"><h2>{{title}}</h2></a>
  </div>
  <p class="bg-white h-max-content w-full">{{content}}</p>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.name}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>