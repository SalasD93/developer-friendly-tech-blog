<div class="flex justify-center">
    <div class="w-full max-w-xs">
        <p class="bg-green-600 p-4 text-white font-bold text-xl text-center">Sign Up</p>
        <form class="signup-form bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="name-signup">Name:</label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" id="name-signup" placeholder="userName1 or John Smith" />
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email-signup">Email:</label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" id="email-signup" placeholder="johnsmith@email.com" />
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password-signup">Password:</label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="password" id="password-signup" placeholder="******************" />
            </div>
            <div class="flex items-center justify-center">
                <button class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-10 rounded focus:outline-none focus:shadow-outline" type="submit">SIGN UP</button>
            </div>
        </form>
    </div>
</div>

<script src="/javascript/signup.js"></script>